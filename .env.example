# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_AUTHORITY=https://api.pvhcorp.com
JWT_AUDIENCE=pvh-api
JWT_KEY_CLAIM_NAME=key
JWT_EXPIRATION_MINUTES=15

# Kong Configuration
KONG_ADMIN_URL=http://localhost:8001
KONG_ADMIN_TOKEN=your-kong-admin-token-here
KONG_CONSUMER_ID_HEADER=x-consumer-id
KONG_CONSUMER_USERNAME_HEADER=x-consumer-username
KONG_ANONYMOUS_HEADER=x-anonymous-consumer

# OpenTelemetry (optional)
OPEN_TELEMETRY_ENDPOINT=http://localhost:4318/v1/traces