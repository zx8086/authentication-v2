# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_AUTHORITY=https://api.pvhcorp.com
JWT_AUDIENCE=pvh-api
JWT_KEY_CLAIM_NAME=key
JWT_EXPIRATION_MINUTES=15

# Kong Configuration
KONG_ADMIN_URL=http://localhost:8001
KONG_ADMIN_TOKEN=your-kong-admin-token-here
KONG_CONSUMER_ID_HEADER=x-consumer-id
KONG_CONSUMER_USERNAME_HEADER=x-consumer-username
KONG_ANONYMOUS_HEADER=x-anonymous-consumer

# OpenTelemetry Configuration (using standard OTEL environment variables)
# Service identification
OTEL_SERVICE_NAME=authentication-service
OTEL_SERVICE_VERSION=1.0.0

# Telemetry mode (custom variable - console/otlp/both)
TELEMETRY_MODE=both

# OTLP Exporter endpoints (use either base endpoint OR specific endpoints)
# Base endpoint (automatically appends /v1/traces, /v1/metrics, /v1/logs):
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Or specify individual endpoints (takes precedence over base endpoint):
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics
OTEL_EXPORTER_OTLP_LOGS_ENDPOINT=http://localhost:4318/v1/logs

# OTLP Exporter configuration (optional)
OTEL_EXPORTER_OTLP_TIMEOUT=30000
OTEL_BSP_MAX_EXPORT_BATCH_SIZE=2048
OTEL_BSP_MAX_QUEUE_SIZE=10000