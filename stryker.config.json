{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "command",
  "commandRunner": {
    "command": "bun test ./test/bun"
  },
  "plugins": ["@stryker-mutator/typescript-checker"],
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "mutate": ["src/**/*.ts", "!src/**/*.d.ts", "!src/types/**/*.ts"],
  "ignorePatterns": ["node_modules", "dist", "test", "scripts", ".github", "docs"],
  "reporters": ["html", "clear-text", "progress", "json"],
  "htmlReporter": {
    "fileName": "test/results/mutation/mutation-report.html"
  },
  "jsonReporter": {
    "fileName": "test/results/mutation/mutation-report.json"
  },
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": null
  },
  "concurrency": 4,
  "timeoutMS": 60000,
  "timeoutFactor": 2.5,
  "disableTypeChecks": false,
  "cleanTempDir": "always",
  "tempDirName": ".stryker-tmp",
  "coverageAnalysis": "off"
}
